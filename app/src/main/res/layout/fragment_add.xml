<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/white"
        tools:context=".AddFragment">

        <!-- TODO: Update blank fragment layout -->

        <!--    <TextView-->
        <!--        android:layout_width="wrap_content"-->
        <!--        android:layout_height="wrap_content"-->
        <!--        android:text="Tambahkan foto masakan"-->
        <!--        android:layout_gravity="center"-->
        <!--        android:layout_marginTop="10dp"-->
        <!--        android:textSize="20sp" />-->

        <ImageView
            android:id="@+id/select_image"
            android:layout_width="57dp"
            android:layout_height="57dp"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"
            android:src="@drawable/baseline_add_photo_alternate_24" />

        <EditText
            android:id="@+id/ETJudul"
            android:layout_width="300dp"
            android:layout_height="137dp"
            android:layout_gravity="center"
            android:layout_marginTop="15dp"
            android:hint="Judul: Masukkan judul Masakan"
            android:textColorHint="@color/black"
            android:textSize="20sp"/>

        <EditText
            android:id="@+id/ETBahan"
            android:layout_width="300dp"
            android:layout_height="137dp"
            android:layout_gravity="center"
            android:layout_marginTop="25dp"
            android:hint="Bahan-bahan: Masukkan bahan-bahan masakan"
            android:textColorHint="@color/black"
            android:textSize="20sp"/>

        <EditText
            android:id="@+id/ETLangkah"
            android:layout_width="300dp"
            android:layout_height="137dp"
            android:layout_gravity="center"
            android:layout_marginTop="25dp"
            android:hint="Langkah-langkah: Masukkan langkah-langkah"
            android:textColorHint="@color/black"
            android:textSize="20sp"/>

        <Button
            android:id="@+id/buttonUpload"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:layout_gravity="center"
            android:text="Upload" />

    </LinearLayout>
</ScrollView>
