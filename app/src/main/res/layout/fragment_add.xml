    <Button
        android:id="@+id/button_pilih_foto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="25dp"
        android:text="Masukkan Foto" />

    <EditText
        android:id="@+id/ETJudul"
        android:layout_width="300dp"
        android:layout_height="137dp"
        android:layout_gravity="center"
        android:layout_marginTop="15dp"
        android:hint="Judul: Masukkan judul Masakan"
        android:textColorHint="@color/black"
        android:textSize="20sp"/>

    <EditText
        android:id="@+id/ETBahan"
        android:layout_width="300dp"
        android:layout_height="137dp"
        android:layout_gravity="center"
        android:layout_marginTop="25dp"
        android:hint="Bahan-bahan: Masukkan bahan-bahan masakan"
        android:textColorHint="@color/black"
        android:textSize="20sp"/>

    <EditText
        android:id="@+id/ETLangkah"
        android:layout_width="300dp"
        android:layout_height="137dp"
        android:layout_gravity="center"
        android:layout_marginTop="25dp"
        android:hint="Langkah-langkah: Masukkan langkah-langkah"
        android:textColorHint="@color/black"
        android:textSize="20sp"/>

    <Button
        android:id="@+id/button_upload"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:layout_gravity="center"
        android:text="Upload" />


</LinearLayout>